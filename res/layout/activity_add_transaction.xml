<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter une transaction"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom de celui qui avance/rend" />

	<Spinner
	    android:id="@+id/spinner_host"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raison de la transaction" />

	<EditText
	    android:id="@+id/editText1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:ems="10" >

	    <requestFocus />
	</EditText>

	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TableLayout
	        android:id="@+id/tableLayoutProfiteur"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	    </TableLayout>
	</ScrollView>
    
	<Button 
	    android:id="@+id/button_add_profiteur"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Ajouter un profiteur" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
	    
 		<Button 
		    android:id="@+id/button_return_home_from_transaction"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="Retour"
		    android:layout_weight="1" />
		
		<Button 
		    android:id="@+id/button_add_transaction"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="Ajouter la transaction"
		    android:layout_weight="1" />
    
	</LinearLayout>


</LinearLayout>