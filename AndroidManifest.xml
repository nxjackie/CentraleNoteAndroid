<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="daron.centralenoteandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
		android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="daron.centralenoteandroid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="daron.centralenoteandroid.DebtsTableActivity"
            android:label="@string/title_activity_debts_table" >
        </activity>
        <activity
            android:name="daron.centralenoteandroid.AddPersonActivity"
            android:label="@string/title_activity_add_person" >
        </activity>
        <activity
            android:name="daron.centralenoteandroid.AddTransactionActivity"
            android:label="@string/title_activity_add_transaction" >
        </activity>
        <activity
            android:name="daron.centralenoteandroid.DetailsActivity"
            android:label="@string/title_activity_details" >
        </activity>
    </application>

</manifest>